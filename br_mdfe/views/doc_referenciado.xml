<odoo>

    <record model="ir.ui.view" id="br_mdfe_doc_ref_form_view">
        <field name="name">br_mdfe.doc.referenciado.form</field>
        <field name="model">doc.referenciado</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="documento_id"/>
                    <field name="invoice_eletronic_id" invisible="1"/>
                    <field name="documento_chave"/>
                    <field name="documento_modelo"/>
                    <field name="documento_uf"/>
                    <field name="documento_municipio"/>
                    <field name="peso_bruto"/>
                    <field name="valor"/>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="br_mdfe.doc_referenciado_tree_view">
        <field name="name">br_mdfe.doc.referenciado.tree</field>
        <field name="model">doc.referenciado</field>
        <field name="arch" type="xml">
            <tree>
                <field name="documento_id"/>
                <field name="documento_chave"/>
                <field name="documento_modelo"/>
                <field name="documento_uf"/>
                <field name="documento_municipio"/>
                <field name="peso_bruto"/>
                <field name="valor"/>
            </tree>
        </field>
    </record>

